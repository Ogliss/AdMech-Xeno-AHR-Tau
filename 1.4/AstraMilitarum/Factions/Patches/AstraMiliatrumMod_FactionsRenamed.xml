		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/AlienRace.ThingDef_AlienRace[@Name="OG_Tau_RaceBase" or @Name="OG_Kroot_Race" or @Name="OG_Vespid_RaceBase"]/alienRace/generalSettings/factionRelations/li/factions/li[text()="QX_ChaosMarineFaction"]/text()</xpath>
					<value>QX_ChaosMarineFaction</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/AlienRace.ThingDef_AlienRace[@Name="OG_Tau_RaceBase" or @Name="OG_Kroot_Race" or @Name="OG_Vespid_RaceBase"]/alienRace/generalSettings/factionRelations/li/factions/li[text()="QX_TraitorGuardFaction"]/text()</xpath>
					<value>QX_TraitorGuardFaction</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/AlienRace.ThingDef_AlienRace[@Name="OG_Tau_RaceBase" or @Name="OG_Kroot_Race" or @Name="OG_Vespid_RaceBase"]/alienRace/generalSettings/factionRelations/li/factions/li[text()="QX_TyranidFaction"]/text()</xpath>
					<value>QX_TyranidFaction</value>
				</li>
			</operations>
		</match>	
	</Operation>
	
</Patch>
