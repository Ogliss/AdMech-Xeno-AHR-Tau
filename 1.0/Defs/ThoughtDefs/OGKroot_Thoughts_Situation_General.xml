<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <ThoughtDef>
    <defName>EnvironmentDark_OGKroot</defName>
    <!--workerClass>ThoughtWorker_Dark</workerClass-->
    <nullifyingTraits>
      <li>NightOwl</li>
      <li>Undergrounder</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>darkness</label>
        <description>I've been in the dark for a while. I don't like it.</description>
        <baseMoodEffect>-2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>ApparelDamaged_OGKroot</defName>
    <!--workerClass>ThoughtWorker_ApparelDamaged</workerClass-->
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>ratty apparel</label>
        <description>The holes in my outfit are annoyingly large. Can't I get something new to wear?</description>
        <baseMoodEffect>-1</baseMoodEffect>
      </li>
      <li>
        <label>tattered apparel</label>
        <description>This thing looks like it's about to fall apart. Can't I wear something that doesn't belong in a trash heap?</description>
        <baseMoodEffect>-2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>DeadMansApparel_OGKroot</defName>
    <!--workerClass>ThoughtWorker_DeadMansApparel</workerClass-->
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>tainted {0}</label>
        <description>I am wearing a piece of apparel that someone died in. I took it as a trophy.</description>
        <baseMoodEffect>1</baseMoodEffect>
      </li>
			<li>
				<label>tainted {0} (+1)</label>
				<description>I am wearing two pieces of apparel that someone died in. Now i have another.</description>
				<baseMoodEffect>2</baseMoodEffect>
			</li>
			<li>
				<label>tainted {0} (+2)</label>
				<description>I am wearing three pieces of apparel that someone died in. These prove my skill.</description>
				<baseMoodEffect>3</baseMoodEffect>
			</li>
			<li>
				<label>tainted {0} etc</label>
				<description>I am wearing four or more pieces of apparel that someone died in. No one will doubht my ability!</description>
				<baseMoodEffect>4</baseMoodEffect>
			</li>
    </stages>
		<nullifyingTraits>
			<li>Bloodlust</li>
		</nullifyingTraits>
  </ThoughtDef>

  <ThoughtDef>
    <defName>HumanLeatherApparelSad_OGKroot</defName>
    <workerClass>AdeptusMechanicus.ThoughtWorker_HumanlikeLeatherApparel_Kroot</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>humanoid leather {0}</label>
        <description>Wearing humanoid leather is disturbing. Who could do this?</description>
        <baseMoodEffect>-2</baseMoodEffect>
      </li>
			<li>
				<label>humanoid leather {0} (+1)</label>
				<description>I'm dressed like an insane person.</description>
				<baseMoodEffect>-4</baseMoodEffect>
			</li>
			<li>
				<label>humanoid leather {0} (+2)</label>
				<description>I think there may be a face on my clothes. Oh, no... my clothes *are* a face.</description>
				<baseMoodEffect>-6</baseMoodEffect>
			</li>
			<li>
				<label>humanoid leather {0} etc</label>
				<description>I look like a freak from a horror show, and I feel like I'm in a horror show.</description>
				<baseMoodEffect>-8</baseMoodEffect>
			</li>
    </stages>
  </ThoughtDef>
	
  <ThoughtDef>
    <defName>HumanLeatherApparelHappy_OGKroot</defName>
    <workerClass>AdeptusMechanicus.ThoughtWorker_HumanlikeLeatherApparel_Kroot</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>humanoid leather {0}</label>
        <description>I enjoy wearing the suffering of others.</description>
        <baseMoodEffect>2</baseMoodEffect>
      </li>
			<li>
				<label>humanoid leather {0} (+1)</label>
				<description>This will scare them. All will know my power.</description>
				<baseMoodEffect>4</baseMoodEffect>
			</li>
			<li>
				<label>humanoid leather {0} (+2)</label>
				<description>The faces on my clothes aren't smiling, but they make *me* happy.</description>
				<baseMoodEffect>6</baseMoodEffect>
			</li>
			<li>
				<label>humanoid leather {0} etc</label>
				<description>The flesh! The flesh signals my triumph!</description>
				<baseMoodEffect>8</baseMoodEffect>
			</li>
    </stages>
		<requiredTraits>
			<li>Bloodlust</li>
			<li>Cannibal</li>
		</requiredTraits>
  </ThoughtDef>
