		<invNutrition>2.55</invNutrition>
		<itemQuality>Normal</itemQuality>
	<minGenerationAge>10</minGenerationAge>
		<maxGenerationAge>300</maxGenerationAge>
		<gearHealthRange>
			<min>0.7</min>
			<max>2.3</max>
		</gearHealthRange>
		<apparelTags>
			<li>KrootClothBasic</li>
		</apparelTags>
		<apparelMoney>
			<min>1500</min>
			<max>2800</max>
		</apparelMoney>
		<weaponMoney>
			<min>750</min>
			<max>2500</max>
		</weaponMoney>
		<techHediffsMoney>
			<min>1000</min>
			<max>1500</max>
		</techHediffsMoney>
		<inventoryOptions>
			<skipChance>0.8</skipChance>
			<subOptionsChooseOne>
				<li>
					<thingDef>Silver</thingDef>
					<countRange>
						<min>50</min>
						<max>200</max>
					</countRange>
				</li>
				<li>
					<thingDef>MedicineIndustrial</thingDef>
					<countRange>
						<min>1</min>
						<max>1</max>
					</countRange>
				</li>
			</subOptionsChooseOne>
		</inventoryOptions>
		<modExtensions>
			<li MayRequire="CETeam.CombatExtended" Class="CombatExtended.LoadoutPropertiesExtension">
				<primaryMagazineCount>
					<min>5</min>
					<max>8</max>
				</primaryMagazineCount>
			</li>
		</modExtensions>
	</PawnKindDef>

	<!-- ============================ Kroot Kindred Warrior ========================== -->
	<PawnKindDef Abstract="True" Name="OG_Kroot_Kindred_Base" ParentName="OG_Kroot_Mil_Base">
