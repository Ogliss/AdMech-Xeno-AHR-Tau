<Defs>
	<!--========================= Vespid - Armour ==========================-->
	<!--========================= Vespid - Helmet ==========================-->
    <ThingDef ParentName="OG_Tau_Apparel_Armor_Makeable">
		<defName>OGV_Apparel_VespidHelmet</defName>
		<label>vespid communion helmet</label>
		<description>The Vespid Communion Helms are Tau-manufactured masks or helmets worn by Vespid Strain Leaders. The Communion Helm allows for communication between the Vespid and the Tau, Even among the Tau, the technology behind the Communion Helm is a mystery, as the Earth Caste created the devices following the orders of the Ethereal Caste</description>
		<graphicData>
		<texPath>Things/Item/Apparel/Vespid/Helmet/__Icon</texPath>
		<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<color>199,132,1</color>
		</graphicData>
		<statBases>
			<Mass>1</Mass>
			<MarketValue>500</MarketValue>
			<MaxHitPoints>150</MaxHitPoints>
			<WorkToMake>30000</WorkToMake>
			<ArmorRating_Sharp>0.75</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.26</ArmorRating_Blunt>
			<ArmorRating_Heat>0.17</ArmorRating_Heat>
			<Insulation_Heat>3</Insulation_Heat>
			<Insulation_Cold>-10</Insulation_Cold>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.01</MoveSpeed>
			<WorkSpeedGlobal>-0.05</WorkSpeedGlobal>
			<ShootingAccuracyPawn>0.05</ShootingAccuracyPawn>
			<PsychicSensitivity>-0.10</PsychicSensitivity>
		</equippedStatOffsets>
		<costList>
			<Steel>50</Steel>
			<Plasteel>15</Plasteel>
			<OGT_Component>5</OGT_Component>
			<OGT_Fiotak>15</OGT_Fiotak>
		</costList>
		<recipeMaker>
			<researchPrerequisites>
				<li>OG_Tau_Tech_Apparel_Armour_T1</li>
			</researchPrerequisites>
		</recipeMaker>
		<apparel>
		<useWornGraphicMask>true</useWornGraphicMask>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups> 
			<wornGraphicPath>Things/Item/Apparel/Vespid/Helmet/Vespid_Helmet</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>VespidMilitary</li>
				<li>EVA</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<thingCategories>
			<li>OGTHeadgear</li>
		</thingCategories>
		<tradeTags>
			<li>Headgear</li>
		</tradeTags>
    <tickerType>Normal</tickerType>
	<comps>     
	      <li Class="AdeptusMechanicus.CompProperties_EyeProtectionApparel">
		  <Chance>1</Chance>
		</li>
	      <li Class="AdeptusMechanicus.CompProperties_LungProtectionApparel">
		  <Chance>1</Chance>
		</li>
	</comps>
