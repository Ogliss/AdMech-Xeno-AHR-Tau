<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!--Kroot_CHILD-->
	<!-- stops normal kroot getting magical abilities from A Rimworld of Magic -->
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationConditional">
				<xpath>
					/Defs/TraitDef[defName = "Gifted"]
				</xpath>
				<success>Always</success>
				<match Class="PatchOperationAdd">
				<xpath>/Defs/AlienRace.BackstoryDef[defName = "Kroot_CHILD"]/disallowedTraits</xpath>
					<value>
						<li>
							<defName>Gifted</defName>
							<degree>2</degree>
						</li>
						<li>
							<defName>InnerFire</defName>
							<degree>4</degree>
						</li>
						<li>
							<defName>HeartOfFrost</defName>
							<degree>4</degree>
						</li>
						<li>
							<defName>StormBorn</defName>
							<degree>4</degree>
						</li>
						<li>
							<defName>Arcanist</defName>
							<degree>4</degree>
						</li>
						<li>
							<defName>Druid</defName>
							<degree>4</degree>
						</li>
						<li>
							<defName>Paladin</defName>
							<degree>4</degree>
						</li>
						<li>
							<defName>Summoner</defName>
							<degree>4</degree>
						</li>
						<li>
							<defName>Necromancer</defName>
							<degree>4</degree>
						</li>
						<li>
							<defName>Lich</defName>
							<degree>4</degree>
						</li>
						<li>
							<defName>Priest</defName>
							<degree>4</degree>
						</li>
						<li>
							<defName>Geomancer</defName>
							<degree>4</degree>
						</li>
						<li>
							<defName>Technomancer</defName>
							<degree>4</degree>
						</li>
						<li>
							<defName>Succubus</defName>
							<degree>4</degree>
						</li>
						<li>
							<defName>Warlock</defName>
							<degree>4</degree>
						</li>
						<li>
							<defName>TM_Psionic</defName>
							<degree>4</degree>
						</li>
						<li>
							<defName>DeathKnight</defName>
							<degree>4</degree>
						</li>
					</value>
				</match>
			</li>
		</operations>
	</Operation>
	
