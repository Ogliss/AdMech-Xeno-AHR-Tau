	<!--==================== Mod - Base Sharp Melee Weapon Template =========================-->
	<ThingDef Name="OGTBaseMeleeWeapon_Sharp" ParentName="OGTBaseMeleeWeapon" Abstract="True">
    <recipeMaker>
