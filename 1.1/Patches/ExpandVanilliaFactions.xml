<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!-- Pirate Faction Expansion: Adds additional Pirate units -->
	
	<Operation Class="PatchOperationSequence">
	<success>Always</success>
		<operations>		
			<!-- Pirate Faction Expansion: Adds Kroot -->
			<li Class="PatchOperationTest">
				<xpath>/Defs/FactionDef[defName = "Pirate"]</xpath>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>/Defs/FactionDef[defName = "Pirate"]/pawnGroupMakers/li/options</xpath>
					<value>
						  <OG_Kroot_Warrior>3</OG_Kroot_Warrior>
						  <OG_Kroot_Hunter>2</OG_Kroot_Hunter>
						  <OG_Kroot_Shaman>1</OG_Kroot_Shaman>
						  <OG_Kroot_Shaper>1</OG_Kroot_Shaper>
					</value>
			</li>	
			
		</operations>	
	</Operation>
	
</Patch>
